<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lbl_add_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="157dp"
            android:layout_marginEnd="140dp"
            android:gravity="center"
            android:padding="@dimen/space_8"
            android:text="Add Coin"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lbl_coin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="@dimen/space_8"
            android:text="Coin"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_add_coin" />

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_clear_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/lbl_add_coin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/lbl_add_coin" />

        <TextView
            android:id="@+id/buy_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:padding="@dimen/space_8"
            android:text="Buy Price"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_amount" />

        <TextView
            android:id="@+id/lbl_boughton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:padding="@dimen/space_8"
            android:text="Bought On"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

        <TextView
            android:id="@+id/lbl_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="-1dp"
            android:padding="@dimen/space_8"
            android:text="@string/description"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_date" />

        <TextView
            android:id="@+id/lbl_currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:padding="@dimen/space_8"
            android:text="Currency"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_buy_insert_amount" />

        <TextView
            android:id="@+id/lbl_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="@dimen/space_8"
            android:text="Amount"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/select_coin" />

        <EditText
            android:id="@+id/select_coin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_rect_grey"
            android:hint="Select a coin"
            android:inputType="textMultiLine|text"
            android:padding="@dimen/space_8"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_coin" />

        <EditText
            android:id="@+id/edit_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_rect_grey"
            android:hint="Insert Amount"
            android:inputType="textMultiLine|text"

            android:padding="@dimen/space_8"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_amount" />

        <EditText
            android:id="@+id/edit_buy_insert_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_rect_grey"
            android:hint="Insert Amount"
            android:inputType="textMultiLine|text"
            android:padding="@dimen/space_8"

            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buy_price" />

        <EditText
            android:id="@+id/edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_rect_grey"
            android:inputType="textMultiLine|text"
            android:padding="@dimen/space_8"
            android:textSize="14sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_description" />

        <EditText
            android:id="@+id/edit_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_rect_grey"
            android:inputType="date|textMultiLine|text"
            android:padding="@dimen/space_8"
            android:textSize="14sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_boughton" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_currency">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_usd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/usd" />

                <Button
                    android:id="@+id/btn_eur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EUR" />

                <Button
                    android:id="@+id/btn_gbp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GBP" />

                <Button
                    android:id="@+id/btn_btc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BTC" />

                <Button
                    android:id="@+id/btn_eth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ETH" />

                <Button
                    android:id="@+id/btn_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GOLD" />

                <Button
                    android:id="@+id/btn_aud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AUD" />

                <Button
                    android:id="@+id/btn_brl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BRL" />

                <Button
                    android:id="@+id/btn_cad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CAD" />

                <Button
                    android:id="@+id/btn_cny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CNY" />

                <Button
                    android:id="@+id/btn_hkd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HKD" />

                <Button
                    android:id="@+id/btn_inr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INR" />

                <Button
                    android:id="@+id/btn_jpy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JPY" />

                <Button
                    android:id="@+id/btn_krw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KRW" />

                <Button
                    android:id="@+id/btn_nzd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NZD" />

                <Button
                    android:id="@+id/btn_php"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHP" />

                <Button
                    android:id="@+id/btn_pln"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLN" />

                <Button
                    android:id="@+id/btn_ron"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RON" />

                <Button
                    android:id="@+id/btn_rub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RUB" />

                <Button
                    android:id="@+id/btn_sgd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SGD" />

                <Button
                    android:id="@+id/btn_vef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VEF" />

            </LinearLayout>

        </HorizontalScrollView>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_drawable_submit_grey"
            android:text="@string/label_submit"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.442"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_description" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>